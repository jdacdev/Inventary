<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">Inventary</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="product/list" Match="NavLinkMatch.All">
                <span class="oi oi-box" aria-hidden="true"></span> Product List
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="category/list" Match="NavLinkMatch.All">
                <span class="oi oi-list" aria-hidden="true"></span> Category List
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="storage/list" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Storage List
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="inout/list" Match="NavLinkMatch.All">
                <span class="oi oi-loop" aria-hidden="true"></span> In Out List
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="warehouse/list" Match="NavLinkMatch.All">
                <span class="oi oi-browser" aria-hidden="true"></span> Warehouse List
            </NavLink>
        </li>
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
